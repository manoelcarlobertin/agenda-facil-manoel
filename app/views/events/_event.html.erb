<div class="card">
  <div class="card-body">
    <p>
      <strong>Name:</strong>
      <%= event.name %>
    </p>

    <p>
    <strong>Category:</strong>
    <%= event.category&.name if event.category.present? %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= event.description %>
    </p>

    <p>
      <strong>Started at:</strong>
      <%= event.started_at %>
    </p>

    <p>
      <strong>Finished at:</strong>
      <%= event.finished_at %>
    </p>
    <p>
      <% if event.file.attached? %>
        <%= link_to "Baixar Anexo", rails_blob_path(event.file, disposition: "attachment"), class: "btn btn-secondary", target: :blank %>
      <% end %>
    </p>
  </div>

  <div class="card-footer d-flex justify-content-between">
    <%= link_to "Editar", edit_event_path(event), class: "btn btn-primary" %>
    <%= button_to "Remover", event_path(event), method: :delete, class: "btn btn-danger", data: { turbo_confirm: "VocÃª tem certeza?" } %>
  </div>
</div>